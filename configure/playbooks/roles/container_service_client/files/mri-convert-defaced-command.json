{
  "name": "mri-convert-defaced",
  "label": "MRI Convert Utility",
  "description": "Changes defaced Nifti file to 256 conformed MGZ file",
  "version": "1.0",
  "schema-version": "1.0",
  "info-url": "https://github.com/Deep-MI/FastSurfer",
  "image": "healthbioscienceideas/fastsurfer:gpu",
  "type": "docker",
  "index": "https://index.docker.io/v1/",
  "working-directory": "",
  "command-line": "/fastsurfer/nii_to_mgz.sh /input /output #MRICONVERT_ARGS#",
  "override-entrypoint": true,
  "mounts": [
    {
      "name": "nii-in",
      "writable": false,
      "path": "/input"
    },
    {
      "name": "mgz-out",
      "writable": true,
      "path": "/output"
    }
  ],
  "environment-variables": {
    "FS_LICENSE": "/fs60/license.txt"
  },
  "ports": {},
  "inputs": [
    {
      "name": "MRICONVERT_ARGS",
      "description": "Any additional arguments for mri_convert outside of inputs and outputs",
      "type": "string",
      "required": false,
      "command-line-flag": "",
      "select-values": []
    }
  ],
  "outputs": [
    {
      "name": "fs-out",
      "description": "Output from mri_convert",
      "required": true,
      "mount": "mgz-out",
      "glob": "*.mgz"
    }
  ],
  "xnat": [
    {
      "name": "DEFACED DATA - Convert defaced NIFTI to 256 conformed MGZ file",
      "description": "DEFACED DATA - Convert defaced NIFTI to 256 conformed MGZ file",
      "contexts": [
        "xnat:imageScanData"
      ],
      "external-inputs": [
        {
          "name": "scan",
          "description": "T1 Scan to convert",
          "type": "Scan",
          "matcher": "@.scan-type  =~ /(t1)/i",
          "required": true,
          "load-children": true
        }
      ],
      "derived-inputs": [
        {
          "name": "scan-resource",
          "description": "Resource containing NIFTI files",
          "type": "Resource",
          "matcher": "@.label  =~ /(NIFTI-DEFACED)/i",
          "required": true,
          "provides-files-for-command-mount": "nii-in",
          "user-settable": true,
          "load-children": true,
          "derived-from-wrapper-input": "scan",
          "derived-from-xnat-object-property": "label",
          "multiple": false
        }
      ],
      "output-handlers": [
        {
          "name": "mgz-resource",
          "accepts-command-output": "fs-out",
          "as-a-child-of": "scan",
          "type": "Resource",
          "label": "MGZ-DEFACED",
          "tags": []
        }
      ]
    }
  ],
  "reserve-memory": 256,
  "limit-memory": 512,
  "limit-cpu": 1.5,
  "container-labels": {},
  "generic-resources": {},
  "ulimits": {},
  "secrets": []
}

